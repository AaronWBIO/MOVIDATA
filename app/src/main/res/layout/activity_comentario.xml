<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comentario"
    android:background="@drawable/fondo5">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="272dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/white_rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="183dp"
            android:layout_height="44dp"
            android:src="@drawable/comentario_logo"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="ESCRIBE TU COMENTARIO"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_bold"/>

        <EditText
            android:id="@+id/edit_comentario"
            android:layout_width="288dp"
            android:layout_height="27dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/search_round_line"

            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="TU INFORMACIÃ“N ES VALIOSA"
            android:layout_marginTop="10dp"
            android:textColor="#828285"
            android:fontFamily="@font/roboto_bold"/>

        <ImageView
            android:layout_width="58dp"
            android:layout_height="52dp"
            android:src="@drawable/comentario_sig"
            android:layout_marginTop="30dp"
            android:id="@+id/comentario_sig"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>